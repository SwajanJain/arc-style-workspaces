{
  "manifest_version": 3,
  "name": "Arc-Inspired Workspaces",
  "version": "1.0.1",
  "description": "Arc-like vertical workspace sidebar with favorites and workspaces for Chromium browsers",
  "homepage_url": "https://github.com/SwajanJain/arc-style-workspaces",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "tabCapture",
    "scripting",
    "clipboardWrite",
    "favicon",
    "history",
    "bookmarks",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Toggle Workspaces Panel"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Toggle workspaces side panel"
    },
    "quick-open": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Focus search in side panel"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
